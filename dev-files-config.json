{
  "description": "开发辅助文件配置清单 - 这些文件不应该出现在main分支中",
  "version": "1.0",
  "last_updated": "2025-06-24",
  "categories": {
    "local_config": {
      "description": "本地配置文件",
      "patterns": [
        "*.local",
        ".env.local",
        ".env.dev",
        ".env.development"
      ],
      "exact_files": []
    },
    "dev_scripts": {
      "description": "开发脚本文件",
      "patterns": [
        "*dev.sh",
        "*-dev.sh",
        "dev-*.sh",
        "build-and-run.sh",
        "simple-dev.sh"
      ],
      "exact_files": [
        "dev.sh",
        "compose-run.sh",
        "dev-manager.sh",
        "check-env.sh",
        "fix-network.sh",
        "offline-setup.sh"
      ]
    },
    "dev_configs": {
      "description": "开发配置文件",
      "patterns": [
        "*.dev.*",
        "*-dev.*",
        "dev-*"
      ],
      "exact_files": [
        ".air.toml",
        "Dockerfile.dev",
        "docker-compose.dev.yml",
        "docker-compose.local.yml"
      ]
    },
    "build_artifacts": {
      "description": "构建产物和临时文件",
      "patterns": [
        "*.tmp",
        "*.temp",
        "*.bak",
        "*.swp",
        "*.sql",
        "*~"
      ],
      "exact_files": [
        "new-api",
        "one-api",
        "makefile"
      ]
    },
    "dev_docs": {
      "description": "开发文档",
      "patterns": [
        "DEV_*.md",
        "*_DEV.md",
        "LOCAL_*.md",
        "test_*.md",
        "TEST_*.md"
      ],
      "exact_files": [
        "DEV_README.md",
        "LOCAL_BUILD_README.md"
      ]
    },
    "sync_tools": {
      "description": "同步和管理工具（这些工具本身不应该在main分支）",
      "patterns": [
        "*sync*.sh",
        "*-sync*.sh"
      ],
      "exact_files": [
        "smart-sync.sh",
        "sync-branches.sh",
        "dev-files-config.json",
        "check-dev-files.sh"
      ]
    },
    "ide_configs": {
      "description": "IDE和编辑器配置",
      "patterns": [
        ".vscode/settings.json",
        ".idea/workspace.xml",
        "*.code-workspace"
      ],
      "exact_files": []
    },
    "temp_files": {
      "description": "临时文件和缓存",
      "patterns": [
        "*.log",
        "*.pid",
        "*.lock",
        "node_modules/",
        ".DS_Store",
        "Thumbs.db"
      ],
      "exact_files": []
    }
  },
  "exceptions": {
    "description": "例外情况 - 即使匹配上述模式，这些文件也应该保留在main分支",
    "patterns": [
      "web/package.json",
      "web/package-lock.json",
      "go.mod",
      "go.sum"
    ],
    "exact_files": [
      "README.md",
      "LICENSE",
      "VERSION",
      "Dockerfile",
      "docker-compose.yml"
    ]
  },
  "custom_rules": {
    "description": "自定义规则说明",
    "rules": [
      "以 'dev' 开头或结尾的文件通常是开发文件",
      "包含 'local' 的文件通常是本地配置",
      "以 'test_' 开头的 .md 文件是测试文档",
      "编译后的二进制文件不应该提交",
      "临时文件和日志文件不应该提交"
    ]
  }
}
